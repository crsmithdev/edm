<edm-terminology>
  <purpose>Core EDM track structure terminology for audio analysis</purpose>

  <sections>
    <intro role="opening" energy="low" length="8-32 bars" desc="Minimalistic, sparse drums, atmospheric"/>
    <buildup role="tension" energy="ascending" length="8-16 bars" desc="Progressive layering, risers, filters"/>
    <drop role="peak" energy="highest" length="16-32 bars" desc="Full instrumentation, main hook, heavy bass" equivalent="chorus"/>
    <breakdown role="contrast" energy="moderate" length="8-16 bars" desc="Reduced elements, removed bass/drums" equivalent="verse"/>
    <outro role="closing" energy="descending" length="16-32 bars" desc="Gradual element removal, DJ transition"/>
  </sections>

  <music-theory>
    <beat desc="Timing/rhythm unit, consistent pulse"/>
    <bar desc="Measure, 4 beats in 4/4 time" groupings="4/8/16/32 bars"/>
    <downbeat desc="First beat of measure (beat 1), strongest anchor"/>
    <phrase desc="Complete musical idea, typically 8-16 bars"/>
    <time-signature default="4/4" desc="4 quarter-note beats per bar"/>
  </music-theory>

  <structures>
    <abab desc="Most common: Intro→Breakdown→Buildup→Drop→Breakdown→Buildup→Drop→Outro"/>
    <club-mix desc="Extended 32-bar sections for DJ mixing"/>
    <radio-edit desc="Shortened 8-16 bar sections, 3-4 min total"/>
  </structures>

  <energy-pattern desc="Dramatic peaks (drop) and troughs (breakdown), cyclical flow"/>

  <terminology-map>
    <map traditional="verse" edm="breakdown"/>
    <map traditional="chorus" edm="drop"/>
    <map traditional="bridge" edm="breakdown/transition"/>
    <map traditional="pre-chorus" edm="buildup"/>
  </terminology-map>

  <mirex-labels standard="2025">intro, verse, chorus, bridge, inst, outro, silence</mirex-labels>

  <bar-indexing base="1" formula="timestamp = downbeat + (bar-1) * 60/bpm * 4"/>

  <reference doc="docs/edm-terminology.md"/>
</edm-terminology>
