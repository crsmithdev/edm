<project-setup>
  <purpose>EDM project structure, commands, tech stack, directory layout, entry points</purpose>
  <cmd run="uv run edm" train="uv run python -m cli.commands.train --config &lt;cfg&gt;" test="uv run pytest -v" lint="uv run ruff check --fix . &amp;&amp; ruff format ." typecheck="uv run mypy src/"/>
  <dirs src="cli/,edm/" data="annotations(yaml)" audio="~/music" tests="unit,integration,perf" configs="train yaml" experiments="runs,checkpoints"/>
  <pkg mgr="uv" note="prefix: uv run"/>
  <tech audio="librosa,beat_this,msaf" ml="torch,transformers,mlflow" cli="typer,rich" validation="pydantic"/>
  <entry analyze="src/edm/analysis/orchestrator.py" train="src/edm/training/trainer.py" cli="src/cli/main.py"/>
</project-setup>
